// see: https://zed.dev/docs/debugger
[
  {
    "label": "Build GC",
    "adapter": "CodeLLDB",
    "program": "./zig-out/bin/zlox",
    "request": "launch",
    "cwd": "$ZED_WORKTREE_ROOT",
    "args": ["test/function/recursion.lox"],
    "build": {
      "command": "zig",
      "args": ["build", "-Dlog-gc", "-Dstress-gc"]
    }
  },
  {
    "label": "Limit",
    "adapter": "CodeLLDB",
    "program": "./zig-out/bin/zlox",
    "request": "launch",
    "cwd": "$ZED_WORKTREE_ROOT",
    "args": ["test/limit/too_many_upvalues.lox"],
    "build": {
      "command": "zig",
      "args": ["build", "-Dtrace-execution"]
    }
  },
  {
    "label": "Closure",
    "adapter": "CodeLLDB",
    "program": "./zig-out/bin/zlox",
    "request": "launch",
    "cwd": "$ZED_WORKTREE_ROOT",
    "args": ["test/closure/nested_closure.lox"],
    "build": {
      "command": "zig",
      "args": ["build", "-Dtrace-execution"]
    }
  }
]
