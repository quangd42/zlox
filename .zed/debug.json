[
  {
    "label": "Build GC",
    "adapter": "CodeLLDB",
    "program": "./zig-out/bin/zlox",
    "request": "launch",
    "cwd": "$ZED_WORKTREE_ROOT",
    "args": ["test/function/recursion.lox"],
    "build": {
      "command": "zig",
      "args": ["build", "-Dlog-gc", "-Dstress-gc"]
    }
  },
  {
    "label": "Fun arguments",
    "adapter": "CodeLLDB",
    "program": "./zig-out/bin/zlox",
    "request": "launch",
    "cwd": "$ZED_WORKTREE_ROOT",
    "args": ["test/function/parameters_s.lox"],
    "build": {
      "command": "zig",
      "args": ["build", "-Dtrace-execution"]
    }
  }
]
